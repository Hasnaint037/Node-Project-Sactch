<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div
            class="ps-12 pe-16 flex justify-between border-b-2 border-gray-400 pt-4 pb-2"
        >
            <div>
                <h1 class="text-3xl font-semibold">Admin Panel.</h1>
            </div>
            <div
                class="flex w-2/6 flex-row justify-between py-3 font-bold text-md"
            >
                <div class="flex gap-4">
                    <a href="/home">Home</a>
                    <a href="/product/shop">Products</a>
                </div>
                <div class="flex gap-4">
                    <a href="/product/cart">Cart</a>
                    <a href="/account">My account</a>
                </div>
            </div>
        </div>

        <div class="w-full ps-12 pe-16 flex gap-3 mt-6">
            <div class="relative w-[188px]">
                <div>
                    <span class="text-lg font-semibold tracking-tight"
                        >All Products</span
                    >
                    <a href="/product/create" class="block tracking-tight"
                        >Create New Product</a
                    >
                </div>
            </div>
            <div class="flex flex-wrap gap-5 px-5 w-[910px]">
                <%products.length>0&&products.map((product)=>{%>
                <a
                    href="/product/update/<%=product._id%>"
                    class="bg-[<%=product.bgcolor%>] h-64 w-[200px] rounded-lg"
                >
                    <div class="h-48 flex flex-col justify-center items-center">
                        <img class="h-48" src="\<%=product.image%>" alt="" />
                    </div>
                    <div
                        class="flex w-full bg-[<%=product.panelcolor%>] justify-between items-center py-2 px-2 h-16"
                    >
                        <div class="text-[<%=product.textcolor%>]">
                            <p><%=product.name%></p>
                            <span><%=product.price%></span>
                        </div>
                    </div>
                </a>
                <%})%>
            </div>
        </div>
    </body>
</html>
